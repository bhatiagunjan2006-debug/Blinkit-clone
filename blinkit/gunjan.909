<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Marwadi College</title>
  <meta name="description" content="Marwadi College — official website sample for GitHub Pages" />

  <!-- Favicon (place in repo root as favicon.ico) -->
  <link rel="icon" href="/favicon.ico" />

  <!-- Simple, self-contained styles -->
  <style>
    :root{
      --accent:#0056b3;
      --muted:#6b7280;
      --bg:#f7fafc;
      --card:#ffffff;
      --radius:14px;
      --glass: rgba(255,255,255,0.6);
      --maxw:1100px;
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    *{box-sizing:border-box}
    body{margin:0;background:linear-gradient(180deg,var(--bg),#eef2f7);color:#0f172a;line-height:1.45}
    .container{max-width:var(--maxw);margin:0 auto;padding:28px}

    /* Header */
    header{backdrop-filter: blur(6px);background:rgba(255,255,255,0.8);position:sticky;top:0;z-index:40;border-bottom:1px solid rgba(15,23,42,0.06)}
    .nav{display:flex;align-items:center;justify-content:space-between;padding:10px 18px}
    .brand{display:flex;align-items:center;gap:12px;font-weight:700}
    .brand .logo{width:48px;height:48px;border-radius:10px;background:linear-gradient(135deg,var(--accent),#0ea5a4);display:grid;place-items:center;color:#fff;font-weight:800}
    nav ul{display:flex;gap:14px;list-style:none;margin:0;padding:0}
    nav a{color:var(--muted);text-decoration:none;padding:8px 10px;border-radius:8px}
    nav a:hover{color:var(--accent);background:rgba(0,86,179,0.06)}
    .cta{background:var(--accent);color:white;padding:8px 12px;border-radius:8px;text-decoration:none}

    /* Hero */
    .hero{display:grid;grid-template-columns:1fr 420px;gap:28px;align-items:center;padding:36px 0}
    .hero h1{margin:0;font-size:clamp(28px,4vw,44px);line-height:1.03}
    .lead{color:var(--muted);margin-top:10px}
    .stats{display:flex;gap:18px;margin-top:18px}
    .stat{background:var(--card);padding:12px;border-radius:12px;min-width:110px;box-shadow:0 6px 20px rgba(2,6,23,0.04)}
    .card{background:var(--card);padding:18px;border-radius:var(--radius);box-shadow:0 10px 30px rgba(2,6,23,0.06)}

    /* Courses */
    .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:14px;margin-top:18px}
    .course{padding:14px;border-radius:12px;background:linear-gradient(180deg,rgba(255,255,255,0.8),rgba(250,250,250,0.9));border:1px solid rgba(2,6,23,0.03)}

    /* Faculty */
    .people{display:flex;gap:12px;flex-wrap:wrap}
    .person{background:var(--card);padding:12px;border-radius:10px;min-width:160px;text-align:center}
    .avatar{width:72px;height:72px;border-radius:12px;display:inline-block;background:linear-gradient(135deg,#ef4444,#f97316);color:#fff;font-weight:700;font-size:20px;line-height:72px}

    /* Footer */
    footer{margin-top:40px;padding:18px 0;color:var(--muted);text-align:center}

    /* Utilities */
    .muted{color:var(--muted)}
    .flex{display:flex;gap:12px;align-items:center}
    .btn{display:inline-block;padding:10px 14px;border-radius:10px;text-decoration:none}
    input,textarea,select{width:100%;padding:10px;border-radius:8px;border:1px solid rgba(2,6,23,0.07);font-size:14px}

    /* Responsive */
    @media (max-width:880px){
      .hero{grid-template-columns:1fr}
      nav ul{display:none}
    }
  </style>
</head>
<body>

<header>
  <div class="container nav">
    <div class="brand">
      <div class="logo" aria-hidden>MC</div>
      <div>
        <div style="font-size:14px">Marwadi College</div>
        <div class="muted" style="font-size:12px">Grow • Learn • Lead</div>
      </div>
    </div>

    <nav aria-label="Main Navigation">
      <ul>
        <li><a href="#about">About</a></li>
        <li><a href="#courses">Courses</a></li>
        <li><a href="#faculty">Faculty</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </nav>

    <a class="cta" href="#apply">Apply</a>
  </div>
</header>

<main class="container">
  <section class="hero">
    <div>
      <h1>Welcome to Marwadi College — excellence in education</h1>
      <p class="lead">A sample static site built for GitHub Pages. This template includes home, courses, faculty, and a contact form you can adapt and publish instantly.</p>

      <div class="stats" role="list">
        <div class="stat" role="listitem"><strong>120+</strong><div class="muted">Courses</div></div>
        <div class="stat" role="listitem"><strong>8,500</strong><div class="muted">Students</div></div>
        <div class="stat" role="listitem"><strong>150</strong><div class="muted">Faculty</div></div>
      </div>

      <div style="margin-top:18px">
        <a class="btn" href="#courses">Explore Courses</a>
        <a class="btn" href="#contact" style="margin-left:8px">Contact</a>
      </div>

      <section id="about" style="margin-top:28px" class="card">
        <h3>About Marwadi College</h3>
        <p class="muted">Marwadi College (sample) — committed to delivering quality education with strong industry connections, research opportunities, and student support services.</p>
      </section>

    </div>

    <aside class="card">
      <h3 style="margin-top:0">Quick Apply</h3>
      <form id="applyForm" onsubmit="return handleApply(event)">
        <label class="muted">Name</label>
        <input id="name" required placeholder="Full name" />
        <label class="muted">Email</label>
        <input id="email" type="email" required placeholder="you@example.com" />
        <label class="muted">Course</label>
        <select id="course">
          <option>Bachelor of Commerce (B.Com)</option>
          <option>Bachelor of Science (B.Sc)</option>
          <option>Bachelor of Arts (B.A)</option>
          <option>Bachelor of Computer Applications (BCA)</option>
        </select>
        <div style="margin-top:10px">
          <button class="cta" type="submit">Submit</button>
        </div>
      </form>
      <p id="applyMsg" class="muted" style="margin-top:10px;font-size:13px"></p>
    </aside>
  </section>

  <section id="courses" style="margin-top:22px">
    <h2>Popular Programs</h2>
    <div class="grid">
      <article class="course">
        <h4>B.Com</h4>
        <p class="muted">Commerce and business studies with internship support.</p>
        <div style="margin-top:8px"><small class="muted">Duration: 3 years</small></div>
      </article>
      <article class="course">
        <h4>B.Sc (Computer Science)</h4>
        <p class="muted">Core CS curriculum, projects and placements.</p>
        <div style="margin-top:8px"><small class="muted">Duration: 3 years</small></div>
      </article>
      <article class="course">
        <h4>BCA</h4>
        <p class="muted">Practical programming, web and mobile development.</p>
        <div style="margin-top:8px"><small class="muted">Duration: 3 years</small></div>
      </article>
      <article class="course">
        <h4>MBA</h4>
        <p class="muted">Leadership, strategy and entrepreneurship.</p>
        <div style="margin-top:8px"><small class="muted">Duration: 2 years</small></div>
      </article>
    </div>
  </section>

  <section id="faculty" style="margin-top:22px">
    <h2>Faculty</h2>
    <div class="people">
      <div class="person">
        <div class="avatar">SB</div>
        <strong>Dr. S. Patel</strong>
        <div class="muted" style="font-size:13px">Principal</div>
      </div>
      <div class="person">
        <div class="avatar">RK</div>
        <strong>Prof. R. Kumar</strong>
        <div class="muted" style="font-size:13px">Head — Computer Science</div>
      </div>
      <div class="person">
        <div class="avatar">AP</div>
        <strong>Dr. A. Parikh</strong>
        <div class="muted" style="font-size:13px">Head — Commerce</div>
      </div>
    </div>
  </section>

  <section id="contact" style="margin-top:22px" class="card">
    <h2>Contact &amp; Location</h2>
    <div style="display:grid;grid-template-columns:1fr 320px;gap:18px;align-items:start">
      <div>
        <p class="muted">For admissions and general inquiries, email: <a href="mailto:info@marwadicollege.edu">info@marwadicollege.edu</a> or call +91-XXXXXXXXXX.</p>
        <h4>Address</h4>
        <p class="muted">(Sample address) Near Bandstand, Rajkot, Gujarat, India</p>

        <h4>Send a message</h4>
        <form id="contactForm" onsubmit="return handleContact(event)">
          <input id="cname" placeholder="Your name" required />
          <input id="cemail" type="email" placeholder="Your email" required />
          <textarea id="cmsg" rows="4" placeholder="Message" required></textarea>
          <div style="margin-top:8px"><button class="cta" type="submit">Send</button></div>
        </form>
        <p id="contactMsg" class="muted" style="margin-top:8px"></p>
      </div>

      <div>
        <!-- Static map placeholder (replace with embedded Google Maps iframe if you want) -->
        <div style="border-radius:10px;overflow:hidden">
          <img alt="map placeholder" src="https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?auto=format&fit=crop&w=800&q=60" style="width:100%;height:220px;object-fit:cover;display:block"/>
        </div>
      </div>
    </div>
  </section>

  <footer>
    <div class="muted">© <span id="year"></span> Marwadi College — This is a template for GitHub Pages.</div>
  </footer>
</main>

<script>
  // Small interactions. No third-party libs — safe for GitHub Pages.
  document.getElementById('year').textContent = new Date().getFullYear();

  function handleApply(e){
    e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const course = document.getElementById('course').value;
    const msg = document.getElementById('applyMsg');
    // For a static site, we'll simply store in localStorage as a demo
    const apps = JSON.parse(localStorage.getItem('mc_apps') || '[]');
    apps.push({name,email,course,ts:new Date().toISOString()});
    localStorage.setItem('mc_apps', JSON.stringify(apps));
    msg.textContent = 'Thanks ' + name.split(' ')[0] + '! Your application is recorded (demo).';
    e.target.reset();
    return false;
  }

  function handleContact(e){
    e.preventDefault();
    const name = document.getElementById('cname').value.trim();
    const email = document.getElementById('cemail').value.trim();
    const message = document.getElementById('cmsg').value.trim();
    // Send data to a real backend or use Formspree / Google Forms. Here we just demo local storage.
    const items = JSON.parse(localStorage.getItem('mc_msgs') || '[]');
    items.push({name,email,message,ts:new Date().toISOString()});
    localStorage.setItem('mc_msgs', JSON.stringify(items));
    document.getElementById('contactMsg').textContent = 'Message saved (demo). For production, connect a backend or use an external form service.';
    e.target.reset();
    return false;
  }

  // Smooth scrolling for internal links
  document.querySelectorAll('a[href^="#"]').forEach(a => {
    a.addEventListener('click', (ev) => {
      const href = a.getAttribute('href');
      if(href.length>1){
        ev.preventDefault();
        document.querySelector(href).scrollIntoView({behavior:'smooth',block:'start'});
      }
    })
  })
</script>

